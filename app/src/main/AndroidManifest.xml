<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.multi_theme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_green"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_green"
        android:supportsRtl="true"
        android:theme="@style/Theme.Multi_Theme">

        <activity
            android:name=".Tools.ActivityMain"
            android:exported="true">

            <intent-filter>

                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>

        <activity-alias
            android:name=".Tools.ActivityMainBlack"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_black"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_black"
            android:targetActivity=".Tools.ActivityMain">

            <intent-filter>

                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".Tools.ActivityMainWight"
            android:exported="true"
            android:icon="@mipmap/ic_launcher_wight"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_wight"
            android:targetActivity=".Tools.ActivityMain">

            <intent-filter>

                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity-alias>
    </application>
</manifest>